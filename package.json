{
  "name": "fyit-landing",
  "version": "1.0.0",
  "description": "FYIT - Contador de Calorias com IA",
  "scripts": {
    "dev": "npm run watch:css",
    "build": "npm run build:css && npm run optimize:html && npm run optimize:images",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "optimize:html": "node scripts/optimize-html.js",
    "optimize:images": "node scripts/optimize-images.js",
    "start": "serve . -p ${PORT:-3000} -s",
    "test": "npm run test:html && npm run test:lighthouse",
    "test:html": "html-validator --file='*.html' --verbose",
    "test:lighthouse": "echo 'Lighthouse test - run manually'",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "fitness",
    "nutrition",
    "calorie-counter",
    "ai"
  ],
  "author": "FYIT",
  "license": "PROPRIETARY",
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "html-minifier-terser": "^7.2.0",
    "postcss": "^8.4.33",
    "sharp": "^0.33.2",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "serve": "^14.2.1"
  }
}
